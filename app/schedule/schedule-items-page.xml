<Page
    navigatingTo="onNavigatingTo"  
    xmlns:lv="nativescript-ui-listview">

    <ActionBar class="schedule">
        <Label text="Schedule"></Label>
        <ActionItem ios.position="right" ios.systemIcon="17" tap="showDialog"></ActionItem>
        <ActionItem ios.position="left" ios.systemIcon="8" tap="showFunction"></ActionItem>
    </ActionBar>
        
        <GridLayout visibility="{{ isLoggedIn ? 'visible' : 'collapsed' }}">
        
        <lv:RadListView items="{{ items }}" row="1"
                    id="myListView"
                    groupingFunction="{{ myGroupingFunc }}"
                    class="item-list"
                    >
        <lv:RadListView.itemTemplate>

        <StackLayout orientation="horizontal" class="entry">
        <Label class="schedule-item margin"/>
            <StackLayout orientation="vertical">
                <Label class="schedule-item" text="{{ nome }}" textWrap="true" color="black" fontSize="18"></Label>
                <Label class="schedule-item sub" fontSize="12" text="{{ xxx || '8:00-9:00 : CaffÃ© degli specchi'}}" textWrap="true"></Label>
                <Label class="schedule-item separator" text="" color="black" fontSize="18"></Label>
            </StackLayout>
        </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
</GridLayout>
</Page>