<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar backgroundColor="#7044ff">
        <Label text="Search"></Label>
    </ActionBar>

    <StackLayout orienttion="vertical">
        <Label class="page__content-icon fas" text="&#xf279;"></Label>
        <Label class="page__content-placeholder" text="{{nome}}"></Label>
        <TextField height="80" hint="Enter name" text="{{nome}}" color="orangered" backgroundColor="lightyellow" />
        <TextField height="80" hint="Enter cognome" text="{{cognome}}" color="orangered" backgroundColor="lightyellow" />
        <Label class="page__content-placeholder" text="{{nome}}"></Label>
        <Label class="page__content-placeholder" text="{{cognome}}"></Label>
    </StackLayout>
</Page>